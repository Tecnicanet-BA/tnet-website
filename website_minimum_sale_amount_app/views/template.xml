<?xml version="1.0" encoding="utf-8"?>
<odoo>

	 <template id="website_sale.product_quantity" inherit_id="website_sale.product" customize_show="True" name="Select Quantity">
      <xpath expr="//a[@id='add_to_cart']" position="before">
        <div class="css_quantity input-group" contenteditable="false">
            <div class="input-group-prepend">
                <a t-attf-href="#" class="btn btn-secondary cart_update js_add_cart_json" aria-label="Remove one" title="Remove one">
                    <i class="fa fa-minus"></i>
                </a>
            </div>
            <input type="text" class="form-control quantity" data-min="1" name="add_qty" t-att-value="add_qty or 1"/>
            <div class="input-group-append">
                <a t-attf-href="#" class="btn btn-secondary cart_update float_left js_add_cart_json" aria-label="Add one" title="Add one">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
        </div>
      </xpath>
    </template>


 	<template id="cart_lines" inherit_id="website_sale.cart_lines" name="Shopping Cart Lines">
 		<xpath expr="//td[@class='text-center td-qty']" position="replace">
 			<td class="text-center td-qty">
                <div class="css_quantity input-group mx-auto">
                    <div class="input-group-prepend">
                        <a t-attf-href="#" class="btn btn-link cart_update js_add_cart_json d-none d-md-inline-block" aria-label="Remove one" title="Remove one">
                            <i class="fa fa-minus"></i>
                        </a>
                    </div>
                    <input type="text" class="js_quantity form-control quantity" t-att-data-line-id="line.id" t-att-data-product-id="line.product_id.id" t-att-value="int(line.product_uom_qty) == line.product_uom_qty and int(line.product_uom_qty) or line.product_uom_qty" />
                    <div class="input-group-append">
                        <a t-attf-href="#" class="btn btn-link float_left cart_update js_add_cart_json d-none d-md-inline-block" aria-label="Add one" title="Add one">
                            <i class="fa fa-plus"></i>
                        </a>
                    </div>
                </div>
            </td>
 		</xpath>
 	</template>




	<template id="sale_minmum_amount" inherit_id="website_sale.cart" name="Website Minimum Amount">
		<xpath expr="//div/div/div/div/div" position="after">
			<t t-if="website_sale_order.company_id.min_amount > website_sale_order.amount_total">
				<p class="bg-danger text-white warning-grater-value" style="padding:10px;">Your Sale Price Amount must be grater Then <t t-esc="website_sale_order.company_id.currency_id.symbol" /> <t t-esc="'%.0f'% website_sale_order.company_id.min_amount"/>
				</p>
			</t>
			<t t-else="">
				<p class="bg-danger text-white warning-grater-value" style="padding:10px;display:none;">Your Sale Price must be grater Then <t t-esc="website_sale_order.company_id.currency_id.symbol" /> <t t-esc="'%.0f'% website_sale_order.company_id.min_amount"/>
				</p>
			</t>
		</xpath>
		<xpath expr="//a[@role='button'][2]" position="replace">
			<t t-if="website_sale_order.company_id.min_amount > website_sale_order.amount_total">
				<a role="button" style="display:none !important;" t-if="website_sale_order and website_sale_order.website_order_line" class="btn btn-primary checkout-button float-right d-none d-xl-inline-block" href="/shop/checkout?express=1">
	                <span class="">Process Checkout</span>
	                <span class="fa fa-chevron-right" />
	            </a>
            </t>
            <t t-else="">
            	<a role="button" t-if="website_sale_order and website_sale_order.website_order_line" class="btn btn-primary float-right d-none d-xl-inline-block checkout-button" href="/shop/checkout?express=1">
	                <span class="">Process Checkout</span>
	                <span class="fa fa-chevron-right" />
	            </a>
            </t>
		</xpath>
		<xpath expr="//div[@id='o_cart_summary']//a[2]" position="replace">
			<t t-if="website_sale_order.company_id.min_amount > website_sale_order.amount_total">
				<a role="button" style="display:none !important;" t-if="website_sale_order and website_sale_order.website_order_line" class="btn btn-primary float-right" href="/shop/checkout?express=1">
					<span class="">Process Checkout</span>
					<span class="fa fa-chevron-right" />
				</a>
			</t>
			<t t-else="">
				<a role="button" t-if="website_sale_order and website_sale_order.website_order_line" class="btn btn-primary float-right" href="/shop/checkout?express=1">
					<span class="">Process Checkout</span>
					<span class="fa fa-chevron-right" />
				</a>
			</t>
			
		</xpath>
	</template>
	<template id="website_sale_short_cart_summary_inherit" inherit_id="website_sale.short_cart_summary">
		<xpath expr="//div[@class='card js_cart_summary']/div/div/a" position="replace">
			<input name="company_price" class="company_price" 
				t-att-value="website_sale_order.company_id.min_amount" style="display:none !important;"/>
				<input name="amount_total" class="amount_total" 
				t-att-value="website_sale_order.amount_total" style="display:none !important;"/>
			<t t-if="website_sale_order.company_id.min_amount > website_sale_order.amount_total">
				<a role="button" style="display:none !important;" t-if="website_sale_order and website_sale_order.website_order_line" class="btn btn-secondary float-right d-none d-xl-inline-block checkout-button" href="/shop/checkout?express=1">
	                <span>Process Checkout</span>
	            </a>
            </t>
            <t t-else="">
            	<a role="button" t-if="website_sale_order and website_sale_order.website_order_line" class="btn btn-secondary float-right d-none d-xl-inline-block checkout-button" href="/shop/checkout?express=1">
	                <span>Process Checkout</span>
	            </a>
            </t>
		</xpath>
	</template>
</odoo>