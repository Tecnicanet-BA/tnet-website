<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="res_config_settings_view_form_website_inherit_id" model="ir.ui.view">
        <field name="name">res.config.settings.view.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_invoicing_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div class="o_setting">
                            <label for="min_amount" string="Website Minimum Sale Price"/>
                            <br/>
                            <field name="min_amount"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>